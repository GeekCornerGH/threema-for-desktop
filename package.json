{
    "name": "threema-desktop",
    "version": "2.0.0",
    "description": "Threema for Desktop",
    "main": "build-js/index.js",
    "scripts": {
        "tsc": "tsc && copyfiles -u 1 src/assets/*.* src/loader/*.* build-js/",
        "start": "electron .",
        "dist": "cross-env ELECTRON_BUILDER_ALLOW_UNRESOLVED_DEPENDENCIES=true node build.js",
        "dist:windows": "yarn build -- WINDOWS",
        "dist:mac": "yarn build -- MAC",
        "dist:linux": "yarn build -- LINUX",
        "build": "electron-builder --publish=always",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix"
    },
    "author": "GeekCorner",
    "license": "MIT",
    "dependencies": {
        "discord-rpc": "^4.0.1",
        "electron-localshortcut": "^3.2.1",
        "electron-online": "^1.0.0",
        "fs-extra": "^10.0.0",
        "node-fetch": "^2.6.1",
        "path": "^0.12.7"
    },
    "devDependencies": {
        "@types/discord-rpc": "^4.0.0",
        "@types/node": "^16.4.13",
        "@types/node-fetch": "^2.5.12",
        "@typescript-eslint/eslint-plugin": "^4.29.0",
        "@typescript-eslint/parser": "^4.29.0",
        "copyfiles": "^2.4.1",
        "cross-env": "^7.0.3",
        "electron": "^13.1.8",
        "electron-builder": "^22.11.7",
        "eslint": "^7.32.0",
        "typescript": "^4.3.5"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/geekcornergh/threema-for-desktop"
    }
}

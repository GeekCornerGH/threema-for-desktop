{
    "name": "threema-desktop",
    "version": "1.6.0",
    "description": "Threema for Desktop",
    "main": "index.js",
    "scripts": {
        "tsc": "tsc",
        "start": "electron .",
        "build": "cross-env ELECTRON_BUILDER_ALLOW_UNRESOLVED_DEPENDENCIES=true node build.js",
        "build:windows": "yarn build -- WINDOWS",
        "build:mac": "yarn build -- MAC",
        "build:linux": "yarn build -- LINUX",
        "cilinux": "node build.js LINUX && node build.js WINDOWS",
        "cidarwin": "node build.js MAC",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix"
    },
    "author": "GeekCorner",
    "license": "MIT",
    "dependencies": {
        "discord-rpc": "^3.2.0",
        "electron-localshortcut": "^3.2.1",
        "node-fetch": "^2.6.1",
        "path": "^0.12.7"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^4.25.0",
        "@typescript-eslint/parser": "^4.25.0",
        "cross-env": "^7.0.3",
        "electron": "^13.0.1",
        "electron-builder": "^22.11.5",
        "eslint": "^7.27.0",
        "typescript": "^4.3.2"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/geekcornergh/threema-for-desktop"
    }
}
